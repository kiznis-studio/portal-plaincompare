---
import Base from '../layouts/Base.astro';
import { searchMetros, searchStates } from '../lib/db';

const db = Astro.locals.runtime.env.DB;
const query = Astro.url.searchParams.get('q')?.trim() || '';

let metros: Awaited<ReturnType<typeof searchMetros>> = [];
let states: Awaited<ReturnType<typeof searchStates>> = [];

if (query) {
  [metros, states] = await Promise.all([
    searchMetros(db, query, 30),
    searchStates(db, query, 10),
  ]);
}
---

<Base
  title={query ? `Search: ${query}` : 'Search'}
  description="Search U.S. metro areas and states to compare side by side."
  breadcrumbs={[{ name: 'Home', href: '/' }, { name: 'Search' }]}
>
  <section class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-2 text-sm text-[var(--color-text-secondary)]">
      <a href="/" class="hover:text-[var(--color-primary)]">Home</a> /
    </div>
    <h1 class="text-2xl font-bold mb-6">Search</h1>

    <form action="/search" method="get" class="mb-8">
      <div class="relative">
        <input
          type="text"
          name="q"
          value={query}
          placeholder="Search metros or states..."
          autofocus
          class="w-full h-12 pl-10 pr-4 text-base rounded-lg border border-[var(--color-border)] bg-[var(--color-bg)] text-[var(--color-text)] placeholder-[var(--color-text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent"
        />
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-[var(--color-text-secondary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
    </form>

    {query && (
      <p class="text-sm text-[var(--color-text-secondary)] mb-6">
        {metros.length + states.length} result{metros.length + states.length !== 1 ? 's' : ''} for "{query}"
      </p>
    )}

    {states.length > 0 && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-3">States</h2>
        <div class="space-y-2">
          {states.map(s => (
            <div class="flex items-center justify-between px-4 py-3 rounded-lg border border-[var(--color-border)] hover:bg-[var(--color-surface)]">
              <span class="font-medium">{s.name} ({s.abbr})</span>
              <span class="text-xs text-[var(--color-text-secondary)]">Select another state to compare</span>
            </div>
          ))}
        </div>
        {states.length >= 2 && (
          <div class="mt-3">
            <a href={`/compare/states/${[states[0].slug, states[1].slug].sort().join('-vs-')}`}
               class="text-sm text-[var(--color-primary)] hover:underline">
              Compare {states[0].name} vs {states[1].name} →
            </a>
          </div>
        )}
      </div>
    )}

    {metros.length > 0 && (
      <div>
        <h2 class="text-lg font-semibold mb-3">Metro Areas</h2>
        <div class="space-y-2">
          {metros.map(m => (
            <div class="flex items-center justify-between px-4 py-3 rounded-lg border border-[var(--color-border)] hover:bg-[var(--color-surface)]">
              <span class="font-medium text-sm">{m.name}</span>
              <span class="text-xs text-[var(--color-text-secondary)] font-mono">{m.cbsa}</span>
            </div>
          ))}
        </div>
        {metros.length >= 2 && (
          <div class="mt-3">
            <a href={`/compare/${[metros[0].slug, metros[1].slug].sort().join('-vs-')}`}
               class="text-sm text-[var(--color-primary)] hover:underline">
              Compare {metros[0].name.split(',')[0]} vs {metros[1].name.split(',')[0]} →
            </a>
          </div>
        )}
      </div>
    )}

    {query && metros.length === 0 && states.length === 0 && (
      <div class="text-center py-12 text-[var(--color-text-secondary)]">
        <p>No results found for "{query}".</p>
        <p class="mt-2 text-sm">Try searching for a city name, state, or CBSA code.</p>
      </div>
    )}
  </section>
</Base>
