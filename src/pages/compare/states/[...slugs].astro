---
import Base from '../../../layouts/Base.astro';
import { getStateBySlug, getStateComparisonData } from '../../../lib/db';
import { formatMoney, formatRpp, formatNumber, salaryEquivalent, rateValue, formatPercent } from '../../../lib/format';

const { slugs } = Astro.params;
if (!slugs) return Astro.redirect('/');

const parts = slugs.split('-vs-');
if (parts.length !== 2) return Astro.redirect('/');

const [slugA, slugB] = parts.sort();
const canonical = slugA + '-vs-' + slugB;
if (slugs !== canonical) return Astro.redirect(`/compare/states/${canonical}`, 301);

const env = Astro.locals.runtime.env;
const [stateA, stateB] = await Promise.all([
  getStateBySlug(env.DB, slugA),
  getStateBySlug(env.DB, slugB),
]);

if (!stateA || !stateB) return Astro.redirect('/404');

const [dataA, dataB] = await Promise.all([
  getStateComparisonData(env, stateA),
  getStateComparisonData(env, stateB),
]);

function w(valA: number | null, valB: number | null, lowerBetter = false): 'a' | 'b' | null {
  if (valA === null || valB === null) return null;
  if (Math.abs(valA - valB) < 0.01) return null;
  if (lowerBetter) return valA < valB ? 'a' : 'b';
  return valA > valB ? 'a' : 'b';
}

function cls(win: 'a' | 'b' | null, side: 'a' | 'b') {
  if (win === null) return '';
  return win === side ? 'text-teal-600 dark:text-teal-400 font-semibold' : 'text-[var(--color-text-secondary)]';
}

const violentRateA = rateValue(dataA.crime?.violent_crime ?? null, dataA.crime?.population ?? null);
const violentRateB = rateValue(dataB.crime?.violent_crime ?? null, dataB.crime?.population ?? null);
const propertyRateA = rateValue(dataA.crime?.property_crime ?? null, dataA.crime?.population ?? null);
const propertyRateB = rateValue(dataB.crime?.property_crime ?? null, dataB.crime?.population ?? null);
---

<Base
  title={`${stateA.name} vs ${stateB.name} ‚Äî Full State Comparison`}
  description={`Compare ${stateA.name} and ${stateB.name} across cost of living, rent, crime, wages, schools, childcare, and environment.`}
  breadcrumbs={[{ name: 'Home', href: '/' }, { name: 'States', href: '/states' }, { name: `${stateA.name} vs ${stateB.name}` }]}
>
  <section class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-2 text-sm text-[var(--color-text-secondary)]">
      <a href="/" class="hover:text-[var(--color-primary)]">Home</a> /
      <a href="/states" class="hover:text-[var(--color-primary)]">States</a> /
    </div>
    <h1 class="text-2xl md:text-3xl font-bold mb-2">{stateA.name} vs {stateB.name}</h1>
    <p class="text-[var(--color-text-secondary)] mb-8">Full comparison across 7 data dimensions from official U.S. government sources.</p>

    <!-- Cost of Living -->
    {dataA.cost && dataB.cost && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
          <span>üí∞</span> Cost of Living
          <a href={`https://plaincost.com/state/${slugA}`} class="text-xs text-[var(--color-primary)] ml-auto" target="_blank" rel="noopener">PlainCost ‚Üí</a>
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]"><th class="pb-2 font-medium">Category</th><th class="pb-2 font-medium text-right">{stateA.name}</th><th class="pb-2 font-medium text-right">{stateB.name}</th></tr></thead>
            <tbody>
              {[
                { label: 'Overall RPP', a: dataA.cost.rpp_all, b: dataB.cost.rpp_all },
                { label: 'Goods', a: dataA.cost.rpp_goods, b: dataB.cost.rpp_goods },
                { label: 'Services', a: dataA.cost.rpp_services, b: dataB.cost.rpp_services },
                { label: 'Rents', a: dataA.cost.rpp_rents, b: dataB.cost.rpp_rents },
              ].map(row => (
                <tr class="border-b border-[var(--color-border)]">
                  <td class="py-3 font-medium">{row.label}</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, true), 'a')}`}>{formatRpp(row.a)}</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, true), 'b')}`}>{formatRpp(row.b)}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        {dataA.cost.rpp_all && dataB.cost.rpp_all && (
          <div class="mt-4 bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-6">
            <h3 class="font-semibold mb-2">Salary Equivalent</h3>
            <p class="text-sm text-[var(--color-text-secondary)]">
              $100,000 in <strong>{stateA.name}</strong> =
              <span class="text-2xl font-bold text-[var(--color-primary)] mx-2">${salaryEquivalent(100000, dataA.cost.rpp_all, dataB.cost.rpp_all).toLocaleString()}</span>
              in <strong>{stateB.name}</strong>
            </p>
          </div>
        )}
      </div>
    )}

    <!-- Rent -->
    {dataA.rent && dataB.rent && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2"><span>üè†</span> Average Rent (FMR)
          <a href="https://plainrent.com" class="text-xs text-[var(--color-primary)] ml-auto" target="_blank" rel="noopener">PlainRent ‚Üí</a>
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]"><th class="pb-2 font-medium">Bedrooms</th><th class="pb-2 font-medium text-right">{stateA.name}</th><th class="pb-2 font-medium text-right">{stateB.name}</th></tr></thead>
            <tbody>
              {[
                { label: 'Studio', a: dataA.rent.br0, b: dataB.rent.br0 },
                { label: '1 Bedroom', a: dataA.rent.br1, b: dataB.rent.br1 },
                { label: '2 Bedroom', a: dataA.rent.br2, b: dataB.rent.br2 },
                { label: '3 Bedroom', a: dataA.rent.br3, b: dataB.rent.br3 },
                { label: '4 Bedroom', a: dataA.rent.br4, b: dataB.rent.br4 },
              ].map(row => (
                <tr class="border-b border-[var(--color-border)]">
                  <td class="py-3 font-medium">{row.label}</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, true), 'a')}`}>{formatMoney(row.a)}/mo</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, true), 'b')}`}>{formatMoney(row.b)}/mo</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    )}

    <!-- Crime -->
    {dataA.crime && dataB.crime && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2"><span>üõ°Ô∏è</span> Crime Rates
          <a href={`https://plaincrime.com/state/${slugA}`} class="text-xs text-[var(--color-primary)] ml-auto" target="_blank" rel="noopener">PlainCrime ‚Üí</a>
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]"><th class="pb-2 font-medium">Crime Type (per 100K)</th><th class="pb-2 font-medium text-right">{stateA.name}</th><th class="pb-2 font-medium text-right">{stateB.name}</th></tr></thead>
            <tbody>
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 font-medium">Violent Crime</td>
                <td class={`py-3 text-right ${cls(w(violentRateA, violentRateB, true), 'a')}`}>{violentRateA?.toFixed(1) ?? 'N/A'}</td>
                <td class={`py-3 text-right ${cls(w(violentRateA, violentRateB, true), 'b')}`}>{violentRateB?.toFixed(1) ?? 'N/A'}</td>
              </tr>
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 font-medium">Property Crime</td>
                <td class={`py-3 text-right ${cls(w(propertyRateA, propertyRateB, true), 'a')}`}>{propertyRateA?.toFixed(1) ?? 'N/A'}</td>
                <td class={`py-3 text-right ${cls(w(propertyRateA, propertyRateB, true), 'b')}`}>{propertyRateB?.toFixed(1) ?? 'N/A'}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    )}

    <!-- Wages -->
    {dataA.wages && dataB.wages && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2"><span>üíº</span> Wages & Employment
          <a href="https://wagedex.com" class="text-xs text-[var(--color-primary)] ml-auto" target="_blank" rel="noopener">WageDex ‚Üí</a>
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]"><th class="pb-2 font-medium">Metric</th><th class="pb-2 font-medium text-right">{stateA.name}</th><th class="pb-2 font-medium text-right">{stateB.name}</th></tr></thead>
            <tbody>
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 font-medium">Avg Median Salary</td>
                <td class={`py-3 text-right ${cls(w(dataA.wages.median_salary, dataB.wages.median_salary), 'a')}`}>{formatMoney(dataA.wages.median_salary)}</td>
                <td class={`py-3 text-right ${cls(w(dataA.wages.median_salary, dataB.wages.median_salary), 'b')}`}>{formatMoney(dataB.wages.median_salary)}</td>
              </tr>
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 font-medium">Total Employment</td>
                <td class="py-3 text-right">{formatNumber(dataA.wages.total_employment)}</td>
                <td class="py-3 text-right">{formatNumber(dataB.wages.total_employment)}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    )}

    <!-- Schools -->
    {dataA.schools && dataB.schools && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2"><span>üéì</span> Schools
          <a href="https://plainschools.com" class="text-xs text-[var(--color-primary)] ml-auto" target="_blank" rel="noopener">PlainSchools ‚Üí</a>
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]"><th class="pb-2 font-medium">Metric</th><th class="pb-2 font-medium text-right">{stateA.name}</th><th class="pb-2 font-medium text-right">{stateB.name}</th></tr></thead>
            <tbody>
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 font-medium">Total Schools</td>
                <td class="py-3 text-right">{formatNumber(dataA.schools.num_schools)}</td>
                <td class="py-3 text-right">{formatNumber(dataB.schools.num_schools)}</td>
              </tr>
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 font-medium">Student-Teacher Ratio</td>
                <td class={`py-3 text-right ${cls(w(dataA.schools.avg_student_teacher_ratio, dataB.schools.avg_student_teacher_ratio, true), 'a')}`}>{dataA.schools.avg_student_teacher_ratio?.toFixed(1) ?? 'N/A'}:1</td>
                <td class={`py-3 text-right ${cls(w(dataA.schools.avg_student_teacher_ratio, dataB.schools.avg_student_teacher_ratio, true), 'b')}`}>{dataB.schools.avg_student_teacher_ratio?.toFixed(1) ?? 'N/A'}:1</td>
              </tr>
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 font-medium">Charter Schools</td>
                <td class="py-3 text-right">{formatPercent(dataA.schools.charter_pct)}</td>
                <td class="py-3 text-right">{formatPercent(dataB.schools.charter_pct)}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    )}

    <!-- Childcare -->
    {dataA.childcare && dataB.childcare && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2"><span>üë∂</span> Childcare Costs (Annual Avg)
          <a href="https://plainchildcare.com" class="text-xs text-[var(--color-primary)] ml-auto" target="_blank" rel="noopener">PlainChildcare ‚Üí</a>
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]"><th class="pb-2 font-medium">Age Group</th><th class="pb-2 font-medium text-right">{stateA.name}</th><th class="pb-2 font-medium text-right">{stateB.name}</th></tr></thead>
            <tbody>
              {[
                { label: 'Infant (Center)', a: dataA.childcare.center_infant, b: dataB.childcare.center_infant },
                { label: 'Toddler (Center)', a: dataA.childcare.center_toddler, b: dataB.childcare.center_toddler },
                { label: 'Preschool (Center)', a: dataA.childcare.center_preschool, b: dataB.childcare.center_preschool },
              ].map(row => (
                <tr class="border-b border-[var(--color-border)]">
                  <td class="py-3 font-medium">{row.label}</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, true), 'a')}`}>{formatMoney(row.a)}/yr</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, true), 'b')}`}>{formatMoney(row.b)}/yr</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    )}

    <!-- Environment -->
    {dataA.enviro && dataB.enviro && (
      <div class="mb-8">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2"><span>üåø</span> Environment
          <a href="https://plainenviro.com" class="text-xs text-[var(--color-primary)] ml-auto" target="_blank" rel="noopener">PlainEnviro ‚Üí</a>
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]"><th class="pb-2 font-medium">Metric</th><th class="pb-2 font-medium text-right">{stateA.name}</th><th class="pb-2 font-medium text-right">{stateB.name}</th></tr></thead>
            <tbody>
              {[
                { label: 'EPA Facilities', a: dataA.enviro.num_facilities, b: dataB.enviro.num_facilities, lower: true },
                { label: 'Water Systems', a: dataA.enviro.num_water_systems, b: dataB.enviro.num_water_systems, lower: false },
                { label: 'Superfund Sites', a: dataA.enviro.num_superfund_sites, b: dataB.enviro.num_superfund_sites, lower: true },
                { label: 'Water Violations', a: dataA.enviro.num_violations, b: dataB.enviro.num_violations, lower: true },
              ].map(row => (
                <tr class="border-b border-[var(--color-border)]">
                  <td class="py-3 font-medium">{row.label}</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, row.lower), 'a')}`}>{formatNumber(row.a)}</td>
                  <td class={`py-3 text-right ${cls(w(row.a, row.b, row.lower), 'b')}`}>{formatNumber(row.b)}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    )}

    <div class="mt-8 pt-8 border-t border-[var(--color-border)] text-sm text-[var(--color-text-secondary)]">
      <p>Data from BEA, HUD, FBI UCR, BLS OES, NCES, DOL, and EPA. Not affiliated with the U.S. Government.</p>
    </div>
  </section>
</Base>
