---
import Base from '../../layouts/Base.astro';
import { getAllStateSchools } from '../../lib/db';
import { formatNumber } from '../../lib/format';

const env = Astro.locals.runtime.env;
const states = await getAllStateSchools(env.DB_SCHOOLS);
const sorted = states
  .filter(s => s.avg_student_teacher_ratio)
  .sort((a, b) => (a.avg_student_teacher_ratio ?? 999) - (b.avg_student_teacher_ratio ?? 999));
---

<Base
  title="Best Student-Teacher Ratios by State"
  description="U.S. states ranked by average student-teacher ratio. Lower ratios mean more individual attention."
  breadcrumbs={[{ name: 'Home', href: '/' }, { name: 'Rankings', href: '/rankings' }, { name: 'Best Schools' }]}
>
  <section class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-2 text-sm text-[var(--color-text-secondary)]">
      <a href="/" class="hover:text-[var(--color-primary)]">Home</a> /
      <a href="/rankings" class="hover:text-[var(--color-primary)]">Rankings</a> /
    </div>
    <h1 class="text-2xl md:text-3xl font-bold mb-2">Best Student-Teacher Ratios</h1>
    <p class="text-[var(--color-text-secondary)] mb-8">States ranked by avg student-teacher ratio. Lower is better.</p>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]">
            <th class="pb-2 font-medium w-12">#</th>
            <th class="pb-2 font-medium">State</th>
            <th class="pb-2 font-medium text-right">Avg Ratio</th>
            <th class="pb-2 font-medium text-right">Schools</th>
            <th class="pb-2 font-medium text-right">Enrollment</th>
          </tr>
        </thead>
        <tbody>
          {sorted.map((s, i) => (
            <tr class="border-b border-[var(--color-border)] hover:bg-[var(--color-surface)]">
              <td class="py-2 text-[var(--color-text-secondary)]">{i + 1}</td>
              <td class="py-2 font-medium">{s.state_name}</td>
              <td class="py-2 text-right">{s.avg_student_teacher_ratio?.toFixed(1)}:1</td>
              <td class="py-2 text-right text-[var(--color-text-secondary)]">{formatNumber(s.num_schools)}</td>
              <td class="py-2 text-right text-[var(--color-text-secondary)]">{formatNumber(s.total_enrollment)}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <p class="mt-6 text-xs text-[var(--color-text-secondary)]">Source: NCES Common Core of Data.</p>
  </section>
</Base>
